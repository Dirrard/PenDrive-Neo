@model Cidade
<div class="row">
    <div class="col-md-12">
        <h3>cidade</h3>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <form action="@Url.Action("Salvar","Cidade")" class="form-horizontal">
            <div class="form-group">
                <div class="col-md-8">
                    @Html.LabelFor(m => m.Nome, "Nome:", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(m => m.Estado.Id, "Estado:", new { @class = "control-label" })
                    @Html.DropDownListFor(m => m.Estado.Id, new SelectList(ViewBag.Esdatos,"Id","Nome"),"--[SELECIONE]----", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8">
                    @Html.LabelFor(m => m.Descricao, "Descrição:", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control",@rows = 10 })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                    <button type="button" class="btn btn-default">Cancelar</button>
                </div>
            </div>
        </form>
    </div>
</div>
