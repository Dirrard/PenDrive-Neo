@using DropDownListMVC.Models
<div class="row">
    <div class="col-md-12">
        <br />
        <a href="@Url.Action("Cadastro,Estado")" class="btn btn-primary">Novo Estado </a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <br />
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Sigla</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Estado item in Model)
                    {
                        <tr>@item.Nome</tr>
                        <tr>@item.Sigla</tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>