@using MLM.Models;
@model Usuario
<div class="row">
    <div class="col-md-12">
        <h3>Login</h3>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <form action="@Url.Action("Logar_Usuario")" class="form-horizontal">
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.Email, "Email:", new { @class = "control_label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
      
            <div class="form-group">
                <div class="col-md-12">
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.Senha, "Senha:", new { @class = "control_label" })
                        @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-primary">Entrar</button>
                </div>
            </div>
        </form>
    </div>
</div>
