@using MLM.Models
<div class="row">
    <div class="col-md-12">
        <br />
        <a href="@Url.Action("Cadastro")" class="btn btn-primary">Novo Modelo</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <br />
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Descrição</th>
                        <th>Preço</th>
                    

                    </tr>
                </thead>
                <tbody>
                    @foreach (Modelo item in Model)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.Descricao</td>
                            <td>@item.Preco</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
